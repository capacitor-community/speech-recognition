{
  "name": "@capacitor-community/speech-recognition",
  "version": "5.0.0",
  "description": "A native plugin for speech recognition",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run docgen && tsc",
    "clean": "rimraf ./dist",
    "docgen": "docgen --api SpeechRecognitionPlugin --output-readme README.md",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "release": "np --no-tests"
  },
  "author": "Priyank Patel <priyank.patel@stackspace.ca>",
  "contributors": [
    "Matteo Padovano <mrbatista@users.noreply.github.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^5.0.0",
    "@capacitor/docgen": "^0.2.1"
  },
  "devDependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "husky": "^4.2.5",
    "np": "^6.2.4",
    "prettier": "^2.3.0",
    "prettier-plugin-java": "^1.0.2",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorCommunitySpeechRecognition.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capacitor-community/speech-recognition"
  },
  "bugs": {
    "url": "https://github.com/capacitor-community/speech-recognition/issues"
  }
}
